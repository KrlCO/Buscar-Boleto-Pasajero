# Configuración de la Base de Datos SQL Server
# Copia este archivo como .env y completa con tus datos reales
DB_SERVER=tu-servidor-sql.ejemplo.com
DB_NAME=nombre_de_tu_base_de_datos
DB_USER=tu_usuario_sql
DB_PASSWORD=tu_contraseña_sql

# Configuración de Flask
SECRET_KEY=tu-clave-secreta-muy-segura-aqui
DEBUG=True

# Configuración de búsqueda
DEFAULT_SEARCH_DAYS=365

# Configuración de IIS (solo si usas IIS)
PYTHON_PATH=C:\Python313\python.exe
WFASTCGI_PATH=C:\Python313\Lib\site-packages\wfastcgi.py